<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#ff1493">
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/secret-valentines.css">
    <link rel="stylesheet" href="/css/bottom-nav.css">
    <script src="/js/theme.js" defer></script>
    <script src="/js/bottom-nav.js" defer></script>
    <title>My Secret Valentine</title>
</head>
<body>

    <div class="container">
        <div class="valentine-wrapper">
            <h1>{{title}}</h1>
            
            {{#if isRevealed}}
                {{#if valentine}}
                    <div class="valentine-card">
                        <h2 class="valentine-name">ğŸ’˜ {{valentine.user_name}}</h2>
                        <p class="reveal-message">Your Secret Valentine has been revealed!</p>
                        
                        <div class="gifts-section">
                            <h3>Their Wishlist ğŸ</h3>
                            {{#if gifts}}
                                <div class="wishlist">
                                    {{#each gifts}}
                                    <div class="wish-item">
                                        <span class="wish-number">#{{this.gift_order}}</span>
                                        <span class="wish-description">{{this.gift_description}}</span>
                                        <span class="wish-price">${{this.price}}</span>
                                    </div>
                                    {{/each}}
                                </div>
                            {{else}}
                                <p class="no-wishes">They haven't added any gifts yet.</p>
                            {{/if}}
                        </div>
                    </div>
                {{else}}
                    <div class="message">
                        <p class="error-message">No valentine assigned. Contact an admin!</p>
                    </div>
                {{/if}}
            {{else}}
                <div class="message">
                    <div class="countdown">
                        <p class="big-emoji">ğŸ’—</p>
                        <p class="countdown-text">Your Secret Valentine will be revealed on</p>
                        <p class="reveal-date">February 1st, 2026</p>
                        <p class="days-left" id="daysLeft"></p>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>

    <script>
        function updateCountdown() {
            const today = new Date();
            const revealDate = new Date(2026, 1, 1); // February 1st, 2026
            const daysRemaining = Math.ceil((revealDate - today) / (1000 * 60 * 60 * 24));
            
            const daysLeftEl = document.getElementById('daysLeft');
            if (daysLeftEl) {
                if (daysRemaining > 0) {
                    daysLeftEl.textContent = `${daysRemaining} day${daysRemaining !== 1 ? 's' : ''} to go!`;
                } else {
                    daysLeftEl.textContent = 'Today\'s the day! ğŸ‰';
                }
            }
        }
        
        updateCountdown();
    </script>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav">
        <a href="/gifts" class="nav-item" data-page="gifts">
            <div class="nav-item-icon">ğŸ</div>
            <span class="nav-item-label">Gifts</span>
        </a>
        <a href="/secret-valentines" class="nav-item active" data-page="valentines">
            <div class="nav-item-icon">ğŸ’Œ</div>
            <span class="nav-item-label">Valentines</span>
        </a>
        <a href="/profile" class="nav-item" data-page="profile">
            <div class="nav-item-icon">ğŸ‘¤</div>
            <span class="nav-item-label">Profile</span>
        </a>
        {{#if isAdmin}}<a href="/admin" class="nav-item" data-page="admin">
            <div class="nav-item-icon">ğŸ‘‘</div>
            <span class="nav-item-label">Admin</span>
        </a>{{/if}}
        <a href="/logout" class="nav-item" data-page="logout">
            <div class="nav-item-icon">ğŸšª</div>
            <span class="nav-item-label">Logout</span>
        </a>
    </nav>
</body>
