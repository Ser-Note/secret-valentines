<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/gifts.css">
    <link rel="stylesheet" href="/css/bottom-nav.css">
    <script src="/js/theme.js" defer></script>
    <script src="/js/gifts.js" defer></script>
    <script src="/js/bottom-nav.js" defer></script>
    <title>My Gifts</title>
</head>
<body>
    <div class="container">
        <div class="gifts-wrapper">
            <h1>{{title}}</h1>
            <p class="subtitle">Create your gift list (Up to 5 gifts)</p>
            
            <div class="price-guide">
                <h3>ğŸ’° Gift Price Guide:</h3>
                <ul>
                    <li>Gift 1: Must be $5.00</li>
                    <li>Gift 2: Must be $10.00</li>
                    <li>Gift 3: Must be $15.00</li>
                    <li>Gifts 4-5: Any price you want</li>
                </ul>
            </div>

            <div class="add-gift-form">
                <input type="text" id="giftDescription" placeholder="What do you want?" maxlength="100">
                <input type="number" id="giftPrice" placeholder="Price" min="0.01" step="0.01">
                <button onclick="addGift()">Add Gift</button>
            </div>

            <div class="gifts-list">
                {{#if gifts}}
                    {{#each gifts}}
                    <div class="gift-item" data-id="{{this.id}}">
                        <div class="gift-info">
                            <span class="gift-number">#{{this.gift_order}}</span>
                            <span class="gift-description">{{this.gift_description}}</span>
                            <span class="gift-price">${{this.price}}</span>
                        </div>
                        <div class="gift-actions">
                            <button class="edit-btn" onclick="editGift('{{this.id}}')">Edit</button>
                            <button class="delete-btn" onclick="deleteGift('{{this.id}}')">Delete</button>
                        </div>
                    </div>
                    {{/each}}
                {{else}}
                    <p class="no-gifts">No gifts yet. Add your first gift to get started! ğŸ</p>
                {{/if}}
            </div>
        </div>
    </div>

